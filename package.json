{
	"name": "dbsapi",
	"version": "0.0.1",
	"main": "server.js",
	"license": "MIT",
	"scripts": {
		"start": "yarn compile && nodemon ./build/server.js",
		"compile": "rm -rf build && tsc",
		"lint": "yarn tslint -c tslint.json 'src/**/*.ts'",
		"lint:fix": "yarn tslint -c tslint.json 'src/**/*.ts' --fix",
		"test": "echo 'there are no tests yet :~$'"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn pretty-quick src/**/* && yarn lint"
		}
	},
	"dependencies": {
		"body-parser": "^1.18.2",
		"express": "^4.16.2",
		"mongodb": "^3.0.4"
	},
	"devDependencies": {
		"@types/es6-promise": "^3.3.0",
		"@types/express": "^4.11.1",
		"@types/mongodb": "^3.0.7",
		"husky": "^0.15.0-rc.8",
		"nodemon": "^1.17.1",
		"prettier": "^1.11.1",
		"pretty-quick": "^1.4.1",
		"tslint": "^5.9.1",
		"tslint-config-prettier": "^1.10.0",
		"typescript": "^2.7.2"
	}
}
