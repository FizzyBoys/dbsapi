{
	"name": "dbsapi",
	"version": "0.0.1",
	"main": "server.js",
	"license": "MIT",
	"scripts": {
		"start": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
		"compile": "rm -rf build && tsc",
		"lint": "yarn tslint -c tslint.json 'src/**/*.ts'",
		"lint:fix": "yarn tslint -c tslint.json 'src/**/*.ts' --fix",
		"test:unit": "mocha -r ts-node/register tests/unit/**/*.ts",
		"test": "yarn lint && yarn test:unit"
	},
	"babel": {
		"presets": [
			"es2015"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn pretty-quick src/**/* && yarn lint"
		}
	},
	"dependencies": {
		"@types/morgan": "^1.7.35",
		"@types/sinon": "^4.3.0",
		"body-parser": "^1.18.2",
		"dotenv": "^5.0.1",
		"express": "^4.16.2",
		"express-basic-auth": "^1.1.4",
		"mongodb": "^3.0.4",
		"nodemon": "^1.17.1",
		"ts-node": "^5.0.1"
	},
	"devDependencies": {
		"@types/es6-promise": "^3.3.0",
		"@types/express": "^4.11.1",
		"@types/mocha": "^2.2.48",
		"@types/mongodb": "^3.0.7",
		"chai": "^4.1.2",
		"husky": "^0.15.0-rc.8",
		"mocha": "^5.0.4",
		"morgan": "^1.9.0",
		"nodemon": "^1.17.1",
		"prettier": "^1.11.1",
		"pretty-quick": "^1.4.1",
		"sinon": "^4.4.6",
		"ts-node": "^5.0.1",
		"tslint": "^5.9.1",
		"tslint-config-prettier": "^1.10.0",
		"typescript": "^2.7.2"
	}
}
